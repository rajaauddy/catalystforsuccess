<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MCQ Question Paper Generator</title>
</head>
<body>

  <h2>MCQ Question Paper Generator</h2>

  <!-- Select Class -->
  <label>Class:</label>
  <select id="classSelect">
    <option value="">Select Class</option>
  </select>

  <br><br>

  <!-- Select Chapter -->
  <label>Chapter:</label>
  <select id="chapterSelect">
    <option value="">Select Chapter</option>
  </select>

  <br><br>

  <!-- Number of Questions -->
  <label>No. of Questions:</label>
  <input type="number" id="questionCount" min="1">

  <br><br>

  <button onclick="generatePaper()">Generate Question Paper</button>

  <hr>

  <!-- Output -->
  <ol id="questionPaper"></ol>

  <script src="script.js"></script>

</body>
</html>
